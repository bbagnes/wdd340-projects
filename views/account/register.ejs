<!-- Generate a title with values created in the controller, or return the home view. -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>
<div id="registerForm">
    <form action="/account/register" method="post">
    <label for="account_firstname" aria-label="Enter your First Name" >First Name:</label><br>
    <input type="text" id="account_firstname" name="account_firstname" required><br>
    <label for="account_lastname" aria-label="Enter your Last Name">Last Name:</label><br>
    <input type="text" id="account_lastname" name="account_lastname" required><br>
    <label for="account_email" aria-label="Enter your Email">Email Address:</label><br>
    <input type="text" id="account_email" name="account_email" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" required><br>
    <label for="account_password" aria-label="Select an account Password">Password:</label><br>
    <input type="password" id="account_password" name="account_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{12,}" required><br><br>
    <input id="regButton" type="submit" value="Register">    
    </form>
</div>